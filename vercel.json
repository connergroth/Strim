{
    "version": 2,
    "builds": [
      {
        "src": "backend/app.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "50mb"
        }
      },
      {
        "src": "frontend/static/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "frontend/templates/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/frontend/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/backend/app.py"
      }
    ]
  }